 void setup ()  
{  
  Serial.begin(115200);  
  Serial.println("\nOTP LOCK");  
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);  
  display.clearDisplay();  

  display.setFont(&FreeSerif9pt7b);
  display.setTextSize(1);  
  display.setTextColor(WHITE);
 

}  
 void loop ()  
{ 
  for(int i=0; i>-300; i--)
  {
    display.drawBitmap(0, i, myBitmapPicture2, 40, 330, WHITE);
    display.drawBitmap(40, i, myBitmapPicture2, 40, 330, WHITE);
    display.drawBitmap(80, i, myBitmapPicture2, 40, 330, WHITE);
    display.fillRect(0,31,128,34,BLACK);
    display.setCursor(7,55);
    display.print("Rolling Display");
    display.display();
    if(i%30==0)
    delay(300);
   
   //display.fillRect(0,0,128,64,BLACK);
   display.clearDisplay();  
  }
    

}